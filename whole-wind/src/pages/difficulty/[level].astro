---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const LEVELS = ['easy', 'medium', 'hard'] as const;
type Level = typeof LEVELS[number];

export async function getStaticPaths() {
	return LEVELS.map((level) => ({ params: { level }, props: { level } }));
}

const { level } = Astro.props as { level: Level };
const posts = (await getCollection('blog'))
	.filter((p) => !p.data.draft && p.data.difficulty === level)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Difficulty: ${level} â€” ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1 style="text-align:center">Difficulty: {level}</h1>
				<ul>
					{posts.map((post) => (
						<li>
							<a href={`/blog/${post.id}/`}>
								<h4 class="title">{post.data.title}</h4>
								<p class="date"><FormattedDate date={post.data.pubDate} /></p>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>


